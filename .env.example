# Wind Project Admin Configuration
# Copy this file to .env and configure your settings

# Secret key for Flask sessions (change this in production!)
SECRET_KEY=your-secret-key-here

# Database URL (SQLite by default, can be changed to PostgreSQL, MySQL, etc.)
DATABASE_URL=sqlite:///wind_project.db

# Admin user settings (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@windproject.com

# File upload settings
MAX_CONTENT_LENGTH=500  # Maximum file size in MB
UPLOAD_FOLDER=uploads

# Flask settings
FLASK_ENV=development
FLASK_DEBUG=True